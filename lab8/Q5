#include <stdio.h>
int main(){
	int a, i, j;
	printf("Enter number of rows for upper half:");
	scanf("%d", &a);
	
	for (i=0; i<a; i++){
		for (j=a-1; j>i; j--){
			printf(" ");
		}
		for (j=0; j<=i; j++){
			printf("* ");
		}
		printf("\n");
	}
	
	for (i=a-1; i>=0; i--){
		for (j=a; j>i; j--){
			printf(" ");
		}
		for (j=0; j<i; j++){
			printf("* ");
		}
		printf("\n");
	}

}
